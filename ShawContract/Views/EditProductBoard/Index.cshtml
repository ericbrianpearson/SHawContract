@{
    Layout = "~/Views/Shared/_AccountProfileLayout.cshtml";
}

<div class="product-boards edit-board col-12 col-lg-10 pt-4 mb-3 mb-md-5">
    <div class="row justify-content-center pt-5">
        <div class="col-12 col-lg-11">
            <form>
                <div class="row justify-content-between align-items-center mb-3 mb-md-4">
                    <div class="col-12 col-md-8">
                        <h2 class="heading-2 py-3 pl-0 pr-3 px-md-0">
                            Edit Product Board:
                            <span class="regular">Board Name #2</span>
                        </h2>
                    </div>
                    <div class="col-12 col-md-4 text-md-right">
                        <button type="button" class="btn btn-secondary btn-black-text letter-spacing-normal"
                                data-toggle="modal" data-target="#renameBoardModal" aria-pressed="false" autocomplete="off">
                            RENAME
                            <i class="fal fa-pencil"></i>
                        </button>
                        <button type="button"
                                class="btn btn-secondary btn-black-text letter-spacing-normal copy-to-clipboard"
                                aria-pressed="false" autocomplete="off">
                            SHARE
                            <i class="far fa-paper-plane"></i>
                        </button>
                        <button type="button" class="btn btn-secondary btn-black-text letter-spacing-normal"
                                data-toggle="modal" data-target="#deleteBoardModal" aria-pressed="false" autocomplete="off">
                            DELETE
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-10">
                        <div class="row mb-3 mb-md-4">
                            <div class="col">
                                <h3 class="heading-3">Board Preferences</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h5 class="heading-5 regular">
                                    Access Logging
                                </h5>
                            </div>
                        </div>
                        <div class="row mb-3 mb-md-5 no-gutters">
                            <div class="col-12 col-md-10">
                                <div class="custom-control custom-checkbox py-2">
                                    <input type="checkbox" class="custom-control-input" id="permissions">
                                    <label class="custom-control-label text-size-small" for="permissions">
                                        User must have a website account and be logged in to view this shared board
                                    </label>
                                </div>
                            </div>
                            <div class="col-12 col-md-2 mt-3 mt-md-0 d-flex justify-content-end">
                                <button type="button" class="btn black bg-white text-size-normal letter-spacing-normal"
                                        data-toggle="modal" data-target="#viewLogModal" aria-pressed="false" autocomplete="off">
                                    View log
                                </button>
                            </div>
                        </div>
                        <div class="row mb-3 mb-md-5">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="introParagraph" class="heading-5">Intro Paragraph</label>
                                    <textarea class="form-control form-control-lg" id="introParagraph" rows="3"
                                              maxlength="500"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3 mb-md-4">
                            <div class="col-12">
                                <h3 class="heading-3">Products</h3>
                            </div>
                        </div>
                        <div class="row mb-5">

                            <!-- search bar -->
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="searchProducts" class="sr-only">Search for products</label>
                                    <div class="input-group mb-3 position-relative">
                                        <input type="text" id="searchProducts" class="form-control form-control-lg"
                                               placeholder="Add products by searching by product name & number here..."
                                               aria-label="Add products by searching by product name & number here...">
                                        <div class="input-group-append">
                                            <button class="btn btn-sm my-0 px-4 input-group-text bg-white text-size-large"
                                                    type="submit">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
