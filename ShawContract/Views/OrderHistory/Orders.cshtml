@using ShawContract.Models.OrderHistory

@model ShawContract.Models.PageViewModel<OrderViewModel>

@{
    Layout = "~/Views/Shared/_AccountProfileLayout.cshtml";
}

<div class="order-history col-12 col-lg-10 pt-4 mb-3 mb-md-5">
    <div class="row justify-content-center pt-5">
        <div class="col-12 col-lg-11">
            <div class="row">
                <div class="col d-flex justify-content-between align-items-center">
                    <h2 class="heading-2 py-3">Order History</h2>
                    <button type="button" class="btn sort-calendar-button" data-toggle="button" aria-pressed="false" autocomplete="off">
                        <span class="sr-only">Sort by date</span>
                        <span class="p-4"><i class="fas fa-long-arrow-alt-up mr-1"></i><i class="fas fa-calendar-alt"></i></span>
                    </button>
                </div>
            </div>

            @foreach (var item in Model.Data.Orders)
            {
                <div class="order-history-card mb-5">
                    <div class="p-4 white bg-blue-regular rounded">
                        <div class="row no-gutters">
                            <div class="col-11">
                                <div class="row">
                                    <div class="col-12 col-md-2">
                                        <span class="d-block text-size-small">
                                            Order#
                                        </span>
                                        <span class="d-block text-size-large">
                                            @item.OrderNumber
                                        </span>
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <span class="d-block text-size-small">
                                            Project Name
                                        </span>
                                        <span class="d-block text-size-large">
                                            @item.ProjectName
                                        </span>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <span class="d-block text-size-small">
                                            Date Submitted
                                        </span>
                                        <span class="d-block text-size-large">
                                            @item.OrderDateSubmitted.ToString("MM.dd.yyyy hh:mmtt")
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-1 d-flex justify-content-end align-items-center">
                                <button class="btn btn-primary expand-btn text-center rounded-circle" type="button"
                                        data-toggle="collapse" data-target="#collapse-id-001" aria-expanded="false"
                                        aria-controls="collapse-id-001">
                                    <i class="fas fa-plus"></i>
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="collapse" id="collapse-id-001">
                        <div class="card card-body p-3 p-md-4">
                            <div class="row no-gutters">
                                @foreach (var orderItem in item.OrderItems)
                                {
                                    <div class="col-12 col-md-6">
                                        <div class="p-2 m-2 p-md-4 m-md-4 product-card bg-gray-semilight">
                                            <div class="h-100">
                                                <div class="row h-100">
                                                    <div class="col-5 h-100">
                                                        <a href="#">
                                                            <img src="@orderItem.PictureUrl" class="card-img img-fluid" alt="...">
                                                        </a>
                                                    </div>
                                                    <div class="col-7 d-flex flex-wrap align-items-center align-items-md-start line-height-normal">
                                                        <div class="row">
                                                            <h4 class="col-12 card-title heading-4">
                                                                <a href="#" class="text-decoration-none black">
                                                                    @orderItem.StyleName : @orderItem.StyleNumber
                                                                </a>
                                                            </h4>
                                                            <div class="col-12 mb-4">
                                                                <span class="text-size-normal semibold mr-1">
                                                                    @orderItem.ColorName
                                                                </span>
                                                                <span class="text-size-normal">
                                                                    @orderItem.ColorNumber
                                                                </span>
                                                            </div>
                                                            <div class="col-12">
                                                                <span class="text-size-xsmall semibold mr-1">
                                                                    Sample Type:
                                                                </span>
                                                                <span class="text-size-xsmall">
                                                                    Cut Swatch
                                                                </span>
                                                            </div>
                                                            <div class="col-12">
                                                                <span class="text-size-xsmall semibold mr-1">
                                                                    Quantity:
                                                                </span>
                                                                <span class="text-size-xsmall">
                                                                    @orderItem.Quantity
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>