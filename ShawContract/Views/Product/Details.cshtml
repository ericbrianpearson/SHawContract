                            }
                            @if (Model.Data.Product.KontentData.Sustainability != null && Model.Data.Product.KontentData.Sustainability.Count() > 0)
                            {
                                <div class="card">
                                    <div class="card-header" id="headingSustainability">
                                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                                data-target="#collapseSustainability" aria-expanded="false" aria-controls="collapseSustainability">
                                            Installation

                                            <i class="far fa-plus-circle open"></i>
                                            <i class="far fa-minus-circle close"></i>
                                        </button>
                                    </div>
                                    <div id="collapseSustainability" class="collapse" aria-labelledby="headingSustainability"
                                         data-parent="#accordionProductSpecs">
                                        <div class="card-body">
                                            <ul class="list-unstyled">
