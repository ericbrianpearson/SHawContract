@using ShawContract.Models.Product
@using System.Text.RegularExpressions
@model ShawContract.Models.PageViewModel<ProductDetailsViewModel>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var colors = Model.Data.Product.Colors.ToList();
    var roomScenes = Model.Data.Product.KontentData.AvailableRoomScenes.ToList();
    var featureImage = Model.Data.Product.FeatureImage ?? "https://placehold.it/738x513/efefef";
    var unathorized = User.Identity.IsAuthenticated ? null : "location.href='" + @Url.Action("Unauthorized", "Product") + "?inventoryType=" + Model.Data.Product.InventoryType + "&nodeAlias=" + Model.Data.Product.StyleName.Replace(' ', '-') + "'";
}
@Html.Hidden("data", Json.Encode(ViewData["Data"]))
@Html.Hidden("addProductLink", @Url.Action("AddProductToShoppingCart", "Product"))
@Html.Hidden("reloadCart", @Url.Action("Cart", "CartDropDown"))
@Html.Hidden("saveToBoardLink", @Url.Action("CreateProductToBoard", "Product"))
@Html.Hidden("addItemToExsistingBoard", @Url.Action("AddProductBoardItem", "Product"))
@Html.Hidden("refreshBoardsLink", @Url.Action("Boards", "ProductBoardsDropDown"))
<main role="main" class="primary flex-shrink-0 product">
    <section class="container product-specs-imgs">
        <div class="row">
            <div class="col-md-7 product-left mb-5">
                <div id="product_detail_view_swap" class="product-rendering-swap-area">
                    <div class="row">
                        <div id="swatch_view" class="col-sm-12 maximized swappable">
                            <div class="control-area">
                                <div class="controls">
                                    <ul class="list-unstyled">
                                        <li>
                                            <button id="tileImageDownload" class="btn btn-control download-this" data-download="@Model.Data.SingleTileImageUrl"><i class="far fa-cloud-download"></i></button>
                                            <label>Download Asset</label>
                                        </li>
                                        <li>
                                            <button onclick="@unathorized" class="btn btn-control save-to-board" data-toggle="modal" data-target="#addToBoardModal" aria-pressed="false" autocomplete="off" data-product="5T233" data-color="01100"><i class="far fa-heart"></i></button>
                                            <label>Save to Board</label>
                                        </li>
                                        <li>
                                            <button id="rotate-img-btn" class="btn btn-control rotate-img"><i class="fas fa-undo"></i></button>
                                            <label>Rotate Asset</label>
                                        </li>
                                        <li>
                                            <button class="btn btn-control multi-tile-view"><i class="fas fa-th-large"></i></button>
                                            <label>Multi-Tile View</label>
                                        </li>
                                    </ul>
                                </div>
                                <div class="img-area with-background">
                                    <img id="single-tile-img" src="@Model.Data.SingleTileImageUrl" alt="" class="single-tile-img rectangle" data-object-fit />
                                </div>
                                <div class="preview-area">
                                    <img id="tileImageSmall" src="@Model.Data.SingleTileImageUrl" data-object-fit />
