         aria-labelledby="productColorNameVersionLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productColorNameVersionLabel">Version Info</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
                        labore et dolore magna aliqua. Ut enim ad minim veniam.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <section class="widget collection-preview">
        <div class="container">
            <div class="mark"></div>
            <div class="row">
                <div class="col-sm-8 offset-sm-2 text-center">
                    <h2 class="title">@Model.Data.Product.Collection</h2>
                </div>
            </div>
            <div class="row mt-4 mb-5">
                <div class="left col-lg-7">
                    @{
                        var collectionImage1 = Model.Data.CollectionProducts.Count > 0 ? Model.Data.CollectionProducts[0].ImageUrl : "https://placehold.it/718x496";
                    }
                    <a href="#"><img class="collection-img" alt="@Model.Data.Product.Collection" src="@collectionImage1" data-object-fit /></a>
                </div>
                <div class="right col-lg-5 d-xl-block d-lg-block d-md-none d-sm-none d-none">
                    @{
                        var collectionImage2 = Model.Data.CollectionProducts.Count > 1 ? Model.Data.CollectionProducts[1].ImageUrl : "https://placehold.it/397x496";
                    }
                    <a href="#"><img class="collection-img" alt="@Model.Data.Product.Collection" src="@collectionImage2" data-object-fit /></a>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-sm-8 offset-sm-2 text-center">
                    <a href="#" class="collection-link blue-regular">Explore @Model.Data.Product.Collection Collection</a>
                </div>
            </div>
        </div>
    </section>
    @if (Model.Data.SimilarProducts.Count > 0)
    {
        <section class="widget also-like">
            <div class="container">
                <div class="mark"></div>
                <div class="row mb-4">
                    <div class="col-sm-8 offset-sm-2 text-center">
                        <h2 class="title">You May Also Like:</h2>
                    </div>
                </div>
                <div class="row mb-5 mx-5 px-4">
                    @for (int i = 0; i < 3; i++)
                    {
                        var product = Model.Data.SimilarProducts[i];
                        var image = product.ImageUrl ?? "https://placehold.it/286x180";
                        <div class="col-sm-4">
                            <div class="card product-card">
                                <a href="@Url.Action("Details", "Product", new { inventoryType = Model.Data.Product.InventoryType, nodeAlias=product.StyleName.Trim().Replace(' ', '-')})"><img class="card-img-top" src="@image" alt="@product.StyleName" data-object-fit></a>
                                <div class="card-body">
                                    <p class="card-title"><a href="#">@product.StyleName</a></p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div id="alsoLikeCollapse" class="collapse">
                    <div class="row mb-5 mx-5 px-4">
                        @if (Model.Data.SimilarProducts.Count > 3)
                        {
                            for (int i = 3; i < 6; i++)
                            {
                                var product = Model.Data.SimilarProducts[i];
                                var image = product.ImageUrl ?? "https://placehold.it/286x180";
                                <div class="col-sm-4">
                                    <div class="card product-card">
                                        <a href="@Url.Action("Details", "Product", new { inventoryType = Model.Data.Product.InventoryType, nodeAlias=product.StyleName.Trim().Replace(' ', '-')})"><img class="card-img-top" src="@image" alt="@product.StyleName" data-object-fit></a>
                                        <div class="card-body">
                                            <p class="card-title"><a href="#">@product.StyleName</a></p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                </div>
                <div class="row mt-5 load-more-row">
                    <div class="col-sm-8 offset-sm-2 text-center">
                        <button class="collection-link blue-regular" data-toggle="collapse" data-target="#alsoLikeCollapse">
                            <span class="more">Show More</span> <span class="less">Show Less</span>
                        </button>
                    </div>
                </div>
            </div>
        </section>
    }

    <div class="modal secondary save-to-board fade" id="addToBoardModal" tabindex="-1" role="dialog"
         aria-labelledby="addToBoardLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="saving-to-board-form">
                    <form>
                        <div class="modal-header">
                            <h1 id="addToBoardLabel" class="modal-title heading-1 blue-regular font-weight-normal">
                                Save to Board
                            </h1>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"><i class="fas fa-times"></i></span>
                            </button>
                        </div>
                        <div class="modal-body mb-4">
                            <div class="row">
                                <div class="left-image-wrapper">
                                    @{
                                        var selectedColorIndex = colors.IndexOf(Model.Data.SelectedColor);
                                     }
                                    <img id="save-to-board-selected-image" data-color="@selectedColorIndex"
                                         src="@Model.Data.SelectedColor.ImageUrl" alt="" data-object-fit>
                                </div>
                                <div class="col d-flex flex-column">
                                    <div class="row">
                                        <div class="col-12">
                                            <h5 class="heading-5 bold">
                                                Select Color
                                            </h5>
                                        </div>
                                        <div class="col-12">
                                            <div class="row no-gutters">
                                                @for (int i = 0; i < colors.Count; i++)
                                                {
                                                    var selectedBoardColor = colors[i].ColorNumber == Model.Data.SelectedColor.ColorNumber? "data-selected":string.Empty;
                                                    <div class="color-wrapper show animate" @selectedBoardColor>
                                                        <img class="save-to-board-color" data-color="@i"
                                                             data-toggle="tooltip" data-html="true" data-placement="top"
                                                             title='&lt;span class="product-name"&gt; @colors[i].ColorName &lt;/span&gt; &lt;span class="product-number"&gt; @colors[i].ColorNumber &lt;/span&gt;'
                                                             src="@colors[i].ImageUrl" alt="" data-object-fit>
                                                    </div>
                                                }
                                                <button id="colorArrowBtn" class="btn-show-colors btn-floating border-0">
                                                    <i class="fas fa-chevron-right font-weight-normal heading-2"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row align-items-end justify-content-end mt-3 mt-lg-5">
                                        <div class="col-12 col-lg-6 mb-3 mb-lg-0">
                                            <h5 class="heading-5 bold">Select Board</h5>
                                            <select id="selectBoardField" name="selectBoardField" title="Select a board"
                                                    class="selectpicker d-block form-control-lg" data-style="select-style white-text" required
                                                    aria-required="true">
                                                <option value="new board" data-content="<span><i class='fal fa-plus mr-2'></i>New Board</span>"></option>
                                                <option data-divider="true"></option>
                                                @foreach (var board in Model.Data.ProductBoards)
                                                {
                                                    <option value="@board.ID">@board.BoardName</option>
                                                }
                                            </select>
                                            <div id="boardNameDropdownError" class="red-regular">
                                                Please select a board.
                                            </div>
                                        </div>
                                        <div class="col-12 col-lg-6 new-board-name">
                                            <div class="form-group mb-0">
                                                <label class="heading-5 medium mb-1" for="newBoardName">Board Name</label>
                                                <input type="text" id="newBoardName" name="newBoardName" class="form-control form-control-lg"
                                                       aria-required="true">
                                                <div id="newBoardError" class="red-regular">
                                                    Please enter a name.
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-lg-6 saveBtn">
                                            <button class="btn btn-primary w-100 py-4" type="submit">
                                                <i class="far fa-heart"></i>
                                                SAVE TO BOARD
                                            </button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="saved-to-board blue-regular">
                    <div class="icon">
                        <i class="far fa-heart" aria-hidden="true"></i>
                        <i class="fas fa-heart fill" aria-hidden="true"></i>
                    </div>
                    <div class="heading-2">
                        Saved
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- add to cart animation -->
    <div class="modal secondary fade" id="addToCartModal" tabindex="-1" role="dialog"
         aria-labelledby="addToBoardLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="added-to-cart blue-regular">
                    <div class="icon">
                        <i class="fal fa-shopping-cart"></i>
                        <i class="fas fa-shopping-cart fill"></i>
                    </div>
                    <div class="heading-2 mt-4">
                        Added to cart
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>