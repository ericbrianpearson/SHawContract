                        <div class="custom-control custom-checkbox">
                            <input name="publicsector" type="checkbox" class="custom-control-input" id="public-sector">
                            <label class="custom-control-label" for="public-sector">Public Sector</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                            <input name="retail" type="checkbox" class="custom-control-input" id="retail">
                            <label class="custom-control-label" for="retail">Retail</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                            <input name="seniorliving" type="checkbox" class="custom-control-input" id="senior-living">
                            <label class="custom-control-label" for="senior-living">Senior Living</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                            <input name="workplace" type="checkbox" class="custom-control-input" id="workplace">
                            <label class="custom-control-label" for="workplace">Workplace</label>
                        </div>
                    </fieldset>
                </div>
                <div class="form-group">
                    <h4 class="font-weight-bold heading-4 my-4">Account Support</h4>
                    <label for="account-manager">Your Account Manager</label>
                    <div class="row">
                        <div class="col">
                            <input id="accountNumber" name="accountNumber" type="hidden" />
                            <select onchange="getValue(this)" id="account-manager" class="selectpicker account-manager-select"
                                    data-style="select-style --white" title="No account manager selected">
                                @foreach (var item in Model.Data.AccountManagers)
                                {
                                    <!-- manager option start -->
                                    <option value="@item.AccountNumber" data-content='<div class="d-flex align-items-center">
                                <!-- image -->
                                <div class="image-wrapper d-none d-sm-block mr-3" style="">
                                <img src="https://placehold.it/100x100" alt="" data-object-fit style="object-fit:cover; height: 100%; width: 100%">
                                </div>

                                <div class="content-body">
                                <div class="row name">
                                <!-- name -->
                                <div class="col text-size-normal medium">
                                <input id="" type="hidden" value="@item.AccountNumber" />
                                <span>
                                @item.Name
                                </span>
                                <span>
                                @item.Place
                                </span>
                                </div>
                                </div>
                                <!-- email -->
                                <div class="row email">
                                <div class="col">
                                <span class="text-size-small">
                                @item.EmailAddress
                                </span>
                                </div>
                                </div>
                                <!-- phone -->
                                <div class="row phone-number">
                                <div class="col">
                                <span class="text-size-small">
                                @item.PhoneNumber
                                </span>
                                </div>
                                </div>
                                </div>
                                </div>'>
                                </option>
                                }
                                <!-- manager option end -->
                            </select>
                        </div>
                    </div>
                    <small id="manager-help-message" class="form-text text-size-small black py-3">
                        Some sort of warning that without an account manager your sample request will be placed on hold for
                        review.
                    </small>
                </div>
                <div class="row d-flex justify-content-between mt-6">
                    <div class="col-12 col-md-4 my-3">
                        <a href='@Url.Action("Products", "Cart")' class="btn btn-tertiary text-gray letter-spacing-normal w-100 h-100 py-4">Back to Products</a>
                    </div>
                    <div class="col-12 col-md-7">
                        <div class="row">
                            <div class="col-12 col-md-6 my-3">
                                <button id="back-to-shipping-address-btn" type="submit" class="btn btn-tertiary letter-spacing-normal w-100 h-100 py-4">Back</button>
                            </div>
                            <div class="col-12 col-md-6 my-3">
                                <button id="continue-2-btn" name="AdditionalDetails" type="submit" class="btn btn-primary letter-spacing-normal w-100 h-100 py-4">Continue</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- ADDITIONAL DETAILS -- END -->
            <!-- FINALIZE AND SUBMIT -- START -->
            <section id="finalize-wrapper" class="form-wrapper col-12 col-lg-11 mx-auto px-3 pt-5">
                <div class="py-5">
                    <h4 class="heading-4 medium pb-4">@Model.Data.Title</h4>
                    <p class="text-size-normal">
                        @Model.Data.Description
                    </p>
                </div>

                @{ Html.RenderAction("Index", "CartItems"); }

                <!-- buttons -->
                <div class="row d-flex justify-content-between mt-6">
                    <div class="col-12 col-md-4 my-3">
                        <a href='@Url.Action("Products", "Cart")' class="btn btn-tertiary text-gray letter-spacing-normal w-100 h-100 py-4">Back to Products</a>
                    </div>
                    <div class="col-12 col-md-7">
                        <div class="row">
                            <div class="col-12 col-md-6 my-3">
                                <button id="back-to-additional-details-btn" type="submit" class="btn btn-tertiary letter-spacing-normal w-100 h-100 py-4">Back</button>
                            </div>
                            <div class="col-12 col-md-6 my-3">
                                <button id="submit-btn" name="SubmitOrder" type="submit" class="btn btn-primary letter-spacing-normal w-100 h-100 py-4">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- FINALIZE AND SUBMIT -- END -->
        </form>
    </section>
</main>

<script>
    function getValue(elem) {
        var acn = elem.options[elem.selectedIndex].value;
        $("#accountNumber").val(acn);

    }
</script>