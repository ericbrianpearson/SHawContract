                                            <option>Cut Swatch</option>
                                            <option>...</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="form-group d-md-flex justify-content-md-center">
                                        <label for="quantity-id-2" class="text-size-xsmall text-muted d-md-none">
                                            Quantity
                                        </label>
                                        <select id="quantity-id-2" value="" class="selectpicker d-block form-control-lg w-50"
                                                data-style="select-style white-text text-center" required aria-required="true">
                                            <option value="1" class="px-5">1</option>
                                            <option value="2" class="px-5">2</option>
                                            <option value="3" class="px-5">3</option>
                                            <option value="4" class="px-5">4</option>
                                            <option value="5" class="px-5">5</option>
                                            <option value="6" class="px-5">6</option>
                                            <option value="7" class="px-5">7</option>
                                            <option value="8" class="px-5">8</option>
                                            <option value="9" class="px-5">9</option>
                                            <option value="10" class="px-5">10</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12 col-md-4 d-flex justify-content-center justify-content-md-end">
                                    <button type="button" class="close text-danger p-4 mr-md-5" aria-label="Close">
