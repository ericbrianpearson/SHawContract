                                        <label for="quantity-id-1" class="text-size-xsmall text-muted d-md-none">
                                            Quantity
                                        </label>
                                        <select id="quantity-id-1" value="" class="selectpicker d-block form-control-lg w-50" data-style="select-style white-text text-center" required
                                                aria-required="true">
